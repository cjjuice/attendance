<h1>Groups</h1>
<form ng-submit="addGroup()">
  <div class="input-append">
    <input type="text" ng-model="newGroup.name" placeholder="Add group" class="span3" id="appendedInputButton">
    <button type="submit"  class="btn btn-primary"><i class="icon-plus"></i></button>
  </div>  
</form>
<table class="table">
  <tr>
  <th>Name</th>
  <th>Delete</th>
  </tr>
  <tr ng-repeat="group in groups">
    <td><a href="/groups/{{group.id}}">{{group.name}}</a></td>
    <td><button ng-click="destroyGroup(group.id)"><i class="icon-trash"></i></button></td>
  </tr>
</table>